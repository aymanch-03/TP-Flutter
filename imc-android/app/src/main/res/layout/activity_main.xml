<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMC (Indice de Masse Corporelle)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>


        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:contentDescription="Bannière IMC"
            android:scaleType="centerInside"
            android:src="@drawable/imc" />

        <EditText
            android:id="@+id/etPoids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Poids (kg)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etTaille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Taille (cm ou m)"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tvImc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"/>

        <ImageView
            android:id="@+id/ivCategorie"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Image catégorie IMC"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnCalculer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Calculer IMC" />

        <TextView
            android:id="@+id/tvCategorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
